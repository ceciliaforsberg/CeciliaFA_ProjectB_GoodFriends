@page
@model AppRazor.Pages.FriendsByCountryModel
@{
    ViewData["Title"] = "ListFriendByCountry";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<div class="container px-4 py-4" id="list-of-groups">
    <h2 class="pb-2 border-bottom">List of Friends by country</h2>

    <p>The database contains @Model.NrOfFriends friends living in chosen country.</p>

    <form method="post" class="needs-validation" novalidate>
        <label class="form-check-label" for="useSeeds">Use seeded data</label>
        <input asp-for="UseSeeds" class="form-check-input" type="checkbox" id="useSeeds">
        <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
            <div class="col-md-7 col-lg-10">
                <div class="row mb-2 text-center">
                    <!-- Search filter-->
                    <div class="row mb-2 text-center">
                        <div class="col-md-6 ">
                            <input asp-for="SearchFilter" class="form-control" type="search" placeholder="Search by country" aria-label="Search">
                        </div>
                        <div class="col-md-2 ">
                            <button asp-page-handler="Search" class="btn btn-outline-success" type="submit">Search</button>
                        </div>
                    </div>
                </div>
                <div class="row mb-2 text-center">
                    <input type="hidden" name="groupId" data-seido-selected-item-id-target />
                    <div class="col-md-6 themed-grid-head-col">Name</div>
                    <div class="col-md-4 themed-grid-head-col">Country</div>
                    <div class="col-md-2 themed-grid-head-col">
                        <a href="~/Members/EditGroup" class="btn btn-success btn-sm m-1" type="button">New</a>
                    </div>
                </div>

                <div class="row mb-2 text-center">

                        @if (Model.Friends is not null)
                        {
                            @foreach (var item in Model.Friends)
                            {
                                <div class="col-md-6 themed-grid-col">
                                    <a href="~/ViewFriend?id=@item.FriendId">
                                        @item.FirstName @item.LastName
                                    </a>
                                </div>
                                <div class="col-md-4 themed-grid-col">
                                    @(item.Address?.Country ?? "Unknown" )
                                </div>
                                    <div class="col-md-2 themed-grid-col">
                                        <a href="~/Members/EditFriend?id=@item.FriendId" class="btn btn-secondary btn-sm m-1" type="button">Edit</a>

                                        <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal" data-bs-target="#delModal"
                                                data-seido-modal-body="@item.FirstName is about to be deleted."
                                                data-seido-selected-item-id="@item.FriendId">
                                            Del
                                        </button>
                                    </div>
                            }
                            <nav aria-label="Standard pagination example">
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link" href="~/Friends/ListOfFriends?pagenr=@Model.PrevPageNr&search=@Model.SearchFilter" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    @for (int i = 0; i < Model.NrVisiblePages; i++)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="~/Friends/ListOfFriends?pagenr=@i&search=@Model.SearchFilter">@(i + 1)</a>
                                        </li>

                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="~/Friends/ListOfFriends?pagenr=@Model.NextPageNr&search=@Model.SearchFilter" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }

                        <!-- Modal in the form tag -->
                        <div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Hello from modal
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" asp-page-handler="DeleteGroup" class="btn btn-primary btn-danger">Ok</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </form>
</div>