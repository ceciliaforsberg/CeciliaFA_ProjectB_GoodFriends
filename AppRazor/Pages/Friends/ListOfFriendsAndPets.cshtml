@page
@model AppRazor.Pages.FriendsAndPetsByCityModel
@{
    ViewData["Title"] = "List friends and pets by city";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<div class="container px-4 py-4" id="list-of-groups">
    <h2 class="pb-2 border-bottom">List of Friends and Pets by City</h2>
    <p>
        @(Model.HasSelectedCountry
        ? $"The database contains {Model.NrOfFriends} friends and {Model.NrOfPets} pets living in {Model.SelectedCountry}."
        : $"The database contains {Model.NrOfFriends} friends and {Model.NrOfPets} pets with unknown country" )
    </p>

    <form method="get" class="mb-4">
        <label class="form-label">Select country</label>

        <select asp-for="SelectedCountry"
                asp-items="@(new SelectList(Model.AvailableCountries))"
                class="form-select"
                onchange="this.form.submit()">
            <option value="">-- Select country --</option>
        </select>

        <input type="hidden" name="search" value="@Model.SearchFilter" />
    </form>

    @if (Model.HasSelectedCountry)
    {

        <form method="get" class="needs-validation" novalidate>

            <label class="form-check-label" for="useSeeds">Use seeded data</label>
            <input type="hidden" name="selectedCountry" value="@Model.SelectedCountry" />
            <input type="text" name="search" value="@Model.SearchFilter" placeholder="Search by city" class="form-control" />
            <button type="submit" class="btn btn-outline-success mt-2">Search</button>

        </form>

        <div name="content" class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
            <div name="listContent" class="col-md-7 col-lg-10">
                <div class="row mb-2 text-center">
                    <input type="hidden" name="groupId" data-seido-selected-item-id-target />
                    <div class="col-md-6 themed-grid-head-col">Name</div>
                    <div class="col-md-2 themed-grid-head-col">Country</div>
                    <div class="col-md-2 themed-grid-head-col">City</div>
                    <div class="col-md-2 themed-grid-head-col">
                        <a href="~/Members/EditGroup" class="btn btn-success btn-sm m-1" type="button">Actions</a>
                    </div>
                </div>

                <div name="friends" class="row mb-2 text-center">

                        @if (Model.Friends is not null)
                        {
                            @foreach (var item in Model.Friends)
                            {
                                <div class="col-md-6 themed-grid-col">
                                    <a href="~/ViewFriend?id=@item.FriendId">
                                        @item.FirstName @item.LastName
                                    </a>
                                    <br />
                                    @if (item.Pets != null && item.Pets.Any())
                                    {
                                        <span class="text-muted small">
                                            Pets:
                                            @string.Join(", ", item.Pets.Select(p => p.Name))
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">
                                            No pets
                                        </span>
                                    }
                                </div>

                                <div class="col-md-2 themed-grid-col">
                                    @(item.Address?.Country ?? "Unknown" )
                                </div>

                                <div class="col-md-2 themed-grid-col">
                                    @(item.Address?.City ?? "Unknown" )
                                </div>

                                <div class="col-md-2 themed-grid-col">
                                    <a href="~/Members/EditFriend?id=@item.FriendId" class="btn btn-secondary btn-sm m-1" type="button">Edit</a>
                                    <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal" data-bs-target="#delModal"
                                        data-seido-modal-body="@item.FirstName is about to be deleted."
                                        data-seido-selected-item-id="@item.FriendId">
                                        Del
                                    </button>
                                </div>
                            }

                            <nav name="pagination" aria-label="Standard pagination example">
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link"
                                        asp-page="/Friends/ListOfFriendsAndPets"
                                        asp-route-selectedCountry="@Model.SelectedCountry"
                                        asp-route-search="@Model.SearchFilter"
                                        asp-route-pagenr="@Model.PrevPageNr">&laquo;
                                        </a>
                                    </li>

                                    @for (int i = 0; i < Model.NrVisiblePages; i++)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                            asp-page="/Friends/ListOfFriendsAndPets"
                                            asp-route-selectedCountry="@Model.SelectedCountry"
                                            asp-route-search="@Model.SearchFilter"
                                            asp-route-pagenr="@i">@(@i + 1)
                                            </a>
                                        </li>
                                    }

                                    <li class="page-item">
                                        <a class="page-link"
                                        asp-page="/Friends/ListOfFriendsAndPets"
                                        asp-route-selectedCountry="@Model.SelectedCountry"
                                        asp-route-search="@Model.SearchFilter"
                                        asp-route-pagenr="@Model.NextPageNr">&raquo;
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }

                        <!-- Modal in the form tag -->
                        <div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Hello from modal
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" asp-page-handler="DeleteGroup" class="btn btn-primary btn-danger">Ok</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    }
</div>